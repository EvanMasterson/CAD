<p id="notice"><%= notice %></p>
<table class="table">
  <thead>
    <tr>
      <th>Email</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>DOB</th>
      <th>Address</th>
      <th>Phone</th>
      <% if current_user.admin %>
        <th>Admin</th>
        <th>Doctor</th>
        <th>Patient</th>
      <% end %>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td><%= @user.email %></td>
      <td><%= @user.firstName %></td>
      <td><%= @user.lastName %></td>
      <td><%= @user.dob %></td>
      <td><%= @user.address %></td>
      <td><%= @user.phone %></td>
      <% if current_user.admin %>
        <td><%= @user.admin %></td>
        <td><%= @user.doctor %></td>
        <td><%= @user.patient %></td>
      <% end %>
    </tr>
  </tbody>
</table>

<% if current_user.admin %>
  <%= link_to 'Edit', edit_user_path(@user) %> |
  <%= link_to 'Back', users_path %>
<% end %>
