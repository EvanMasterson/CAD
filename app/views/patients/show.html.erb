<h1 class="headings">Patient</h1>
<table class="table table-hover">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Dob</th>
      <th>Address</th>
      <th>Phone</th>
      <th>Symptom</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td><%= @patient.firstName %></td>
      <td><%= @patient.lastName %></td>
      <td><%= @patient.email %></td>
      <td><%= @patient.dob %></td>
      <td><%= @patient.address %></td>
      <td><%= @patient.phone %></td>
      <td><%= @patient.symptom %></td>
      <td><%= @patient.category %></td>
    </tr>
  </tbody>
</table>

<% if @patient.doctor %>
  <h1 class="headings">Doctor</h1>
  
  <table class="table table-hover">
    <thead>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Clinic</th>
        <th>Specialisation</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @doctor = @patient.doctor %>
        <tr>
          <td><%= @doctor.firstName %></td>
          <td><%= @doctor.lastName %></td>
          <td><%= @doctor.email %></td>
          <td><%= @doctor.clinic %></td>
          <td><%= @doctor.specialisation %></td>
        </tr>
    </tbody>
  </table>
<% end %>

<%= link_to 'Edit', edit_patient_path(@patient) %> |
<%= link_to 'Back', patients_path %>
